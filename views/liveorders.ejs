<main id="main">
  <div class="container"><!--Cart-->
    <div class="cartbox">
      <h1 style="text-align: center; color:#FFB03B; font-family: Satisfy, sans-serif;">Live Orders</h1>
      <% if (msg) { %>
       <div class="alert alert-info" style="margin-left: 10%;margin-right: 10%;"><%= msg %> </div>
      <% } %>
      <% if (isempty) { %>
        <h4 style="text-align: center">You don't have any live orders</h4>
      <% } else { %>
        <table id="cart-table">
          <thead>
            <tr>
              <th>Item Name</th>
              <th valign="right">Cancel Within</th>
              <th valign="right">Cancel</th>
            </tr>
          </thead>
          <tbody>
            <% myorders.forEach(order => { %>
              <tr>
                <td><%= order.dish_name %></td>
                <td><%= ((order.cancel_time).toString()).substring(4,21) %> </td>
                <% if (order.can_cancel) { %>
                  <td><form action="/cancelorder" method="POST">
                    <input type="hidden"  name="orderid" value="<%= order._id %>">
                    <button type="submit" style="background-color: #fff;border: none;"><i class="fa fa-remove" style="color: #FFB03B; font-size: x-large;" title="Cancel Order"></i></button>
                  </form></td>
                <% } else { %>
                  <td><i class="fa fa-remove" style="color: #7a7a7a; font-size: x-large;" title="Cannot Cancel Order"></i></a></td>
                <% } %>
                </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>
  <div class="container d-flex justify-content-around" style="margin-top: 30px;"><!--Buttons-->
      <a href="/menu" class="nav-btn">Back To Menu</a>
  </div>
</main>