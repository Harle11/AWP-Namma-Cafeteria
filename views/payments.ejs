          <div class="razorpay-embed-btn" data-url="https://pages.razorpay.com/pl_EoyEeV63XzNWD9/view" data-text="Pay Now" data-color="#528FF0" data-size="small">
            <script>
              (function(){
                var d=document; var x=!d.getElementById('razorpay-embed-btn-js')
