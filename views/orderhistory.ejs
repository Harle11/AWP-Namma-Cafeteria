<main id="main">
  <div class="container"><!--Cart-->
    <div class="cartbox" style="padding-left: 5%;padding-right: 5%;">
      <h1 style="text-align: center; color:#FFB03B; font-family: Satisfy, sans-serif;">Order History</h1>
      <% if (isempty) { %>
        <h4 style="text-align: center">You don't have any order history</h4>
      <% } else { %>
        <table id="cart-table">
          <thead>
            <tr>
              <th>Item Name</th>
              <th valign="right">Date & Time</th>
              <th valign="right"></th>
              <th valign="right"></th>
            </tr>
          </thead>
          <tbody>
            <% myorders.forEach(order => { %>
              <tr>
                <td><%= order.dish_name %></td>
                <td><%= ((order.date).toString()).substring(4,21) %></td>
                <td><a href="/addtocart?dish_id=<%= order.dish_id %>"><i class="fa fa-cart-plus" style="color: #FFB03B; font-size:xx-large;" title="Add to cart"></i></a></td>
                <% if (order.isfav) { %>
                  <td><a href="/removefav?dishid=<%= order.dish_id %>"><i class="fa fa-heart" style="color: #FFB03B; font-size: x-large;" title="Remove from quick orders"></i></a></td>
                <% } else { %>
                  <td><a href="/addtofavs?dishid=<%= order.dish_id %>"><i class="fa fa-heart-o" style="color: #FFB03B; font-size: x-large;" title="Add to quick orders"></i></a></td>
                <% } %>
                </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>
  <div class="container d-flex justify-content-around" style="margin-top: 30px;"><!--Buttons-->
      <a href="/menu" class="nav-btn">Back To Menu</a>
  </div>

   <!--Footer start-->
   <footer id="footer">
    <div class="copyright">
      &copy; Copyright <strong><span>Delicious</span></strong>. All Rights Reserved
    </div>
    <div class="credits">
      Designed by BootstrapMade
    </div>
  </div>
</footer>
<!-- End Footer -->

</main>