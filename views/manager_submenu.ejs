<main id="main">
  <div class="container">
    <div class="cartbox"  style="padding-left: 5%;padding-right: 5%;">
      <h1 style="text-align: center; color:#FFB03B; font-family: Satisfy, sans-serif;"><%= dtype %> </h1>
      <% if (isempty) { %>
       <h4>Empty submenu</h4>
      <% } %>
      <table id="cart-table">
        <thead>
          <tr>
            <th>Item Name</th>
            <th valign="right">Price</th>
            <th valign="right">Status</th>
            <th valign="right"></th>
          </tr>
        </thead>
        <tbody>
          <% for( let i = 0; i < dishes.length; i++ ) { %>
            <tr>
              <td><%= dishes[i].dish_name %></td>
              <td>â‚¹<%= dishes[i].price %></td>
              <% if (dishes[i].available) { %>
               <td><a href="/manager/available?avl=true&dishid=<%= dishes[i]._id %>">Available</a></td>
               <% } else { %>
                <td><a href="/manager/available?avl=false&dishid=<%= dishes[i]._id %>">Not Available</a></td>
              <% } %>
              <td><a href="/manager/deletedish?durl=<%= dishes[i].url %>&dish_id=<%= dishes[i]._id %>"><i class="fa fa-remove" style="color: #FFB03B; font-size:xx-large;" title="Delete Dish"></i></a></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="container">
    <div class="cartbox addnewdish" style="margin-top: 10px;">
      <form action="/manager/newdish" method="POST">
        <div class="d-flex justify-content-around">
        <label for="dishname">Dish Name:</label>
        <input type="hidden" value="<%= dtype %>" name="dishtype">
        <input type="hidden" value="<%= durl %>" name="durl">
        <input type="text" name="dishname" required>
        <label for="price">Dish Price</label>
        <input type="number" name="price" required>
        <input type="submit" value="Add Dish">
      </div>
      </form>
    </div>
  </div>
  <div class="container d-flex justify-content-around" style="margin-top: 30px;"><!--Buttons-->
    <a href="/manager/managemenu" class="nav-btn">Back To Menu</a>
    <a href="/manager/managerhome" class="nav-btn">Back To Home</a>
  </div>
</main>