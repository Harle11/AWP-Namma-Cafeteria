<main id="main">
  <div class="container"><!--Cart-->
    <div class="cartbox">
      <h1 style="text-align: center; color:#FFB03B; font-family: Satisfy, sans-serif;">Search Results</h1>
      <table id="cart-table">
        <% if (dishes.length>0) { %>
        <thead>
          <tr>
            <th>Item Name</th>
            <th valign="right">Price</th>
            <th valing="right"> </th>
          </tr>
        </thead>
        <tbody>
            <% dishes.forEach(dish => { %>
              <tr>
                <td><%= dish.dish_name %></td>
                <td>â‚¹<%= dish.price %> </td>
                <td><a href="/addtocart?dish_id=<%= dish._id %>"><i class="fa fa-cart-plus" style="color: #FFB03B; font-size:xx-large;" title="Add to cart"></i></a></td>
              </tr>
            <% }) %>
        </tbody>
        <% } else { %>
          <tbody><tr><td>No dish found, try a different search.</td></tr></tbody>
        <% } %>
      </table>
    </div>
  </div>
  <div class="container d-flex justify-content-around" style="margin-top: 30px;"><!--Buttons-->
      <a href="/home" class="nav-btn">Back To Home</a>
  </div>
</main>