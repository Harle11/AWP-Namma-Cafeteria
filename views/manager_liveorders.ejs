<main id="main">
  <div class="container">
    <div class="cartbox" style="padding-left: 5%;padding-right: 5%;">
      <h1 style="text-align: center; color:#FFB03B; font-family: Satisfy, sans-serif;">Live Orders</h1>
      <% if (isempty) { %>
        <h4 style="text-align: center">No Live Orders Currently</h4>
      <% } else { %>
        <table id="cart-table">
          <thead>
            <tr>
              <th>Item Name</th>
              <th valign="right">Date & Time</th>
              <th valign="right"></th>
            </tr>
          </thead>
          <tbody>
            <% live_orders.forEach(order => { %>
              <tr>
                <td><%= order.dish_name %></td>
                <td><%= ((order.date).toString()).substring(4,21) %></td>
                <td><form action="/manager/ordercomplete" method="POST">
                  <input type="hidden" value="<%= order._id %>" name="order_id">
                  <button type="submit" style="background-color: rgba(0, 0, 0, 0); border: none;"><i class="fa fa-check-circle" style="color: #FFB03B; font-size:xx-large;" title="Complete Order"></i></button>
                </form></td>
                </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>
  <div class="container d-flex justify-content-around" style="margin-top: 30px;"><!--Buttons-->
      <a href="/manager/managerhome" class="nav-btn">Back To Home</a>
  </div>
</main>