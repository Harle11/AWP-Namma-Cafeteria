 <!DOCTYPE html>
 <html lang="en">
 <head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Namma Cafeteria</title>
   <meta name="description" content="College Cafeteria Ordering App">
   <meta name="keywords" content="Namma Cafeteria, BMSCE Cafeteria">
 
   <!--link href="img/favicon.jpg" rel="icon"-->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Satisfy|Bree+Serif|Candal|PT+Sans">
   <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
   <link rel="stylesheet" type="text/css" href="/css/main.css">
 </head>
 <body>
   <!-- ======= Header ======= -->
  <header id="header" <% if (pageType=='login') {%>
    style="display:none"
  <%} %>>
  <% if (pageType=="managerhome" || pageType=="managermenu" || pageType=="managerorders" || pageType=="managerliveorders") { %>
    <div style="margin:0px 40px">
      <div id="mlogo">
        <a href="/manager/managerhome">Namma Cafeteria</a>
        <div class="pull-right">
          <a href="/home" <% if (pageType=='managerhome') {%>
            style="display:none"
          <%} %>><i class="fa fa-home" aria-hidden="true" title="Home"></i></a>
          <a href="/logout"><i class="fa fa-sign-out" aria-hidden="true" title="Logout"></i></a>
        </div>
      </div>
    </div>
  <% } else { %>
    <div id="mySidenav" class="sidenav">
      <div class="top">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"><i class="fa fa-times" aria-hidden="true"></i></a>
        <a href="/userdetails" <% if (pageType=='userdetails') { %>
          class="isactive"
        <% } %>>User Details and Balance</a>
        <a href="/quickorders" <% if (pageType=='quickorders') { %>
          class="isactive"
        <% } %>>Quick Orders</a>
        <a href="/orderhistory" <% if (pageType=='orderhistory') { %>
          class="isactive"
        <% } %>>Order History</a>
        <a href="/liveorders" <% if (pageType=='liveorders') { %>
          class="isactive"
        <% } %>>Live Orders</a>
      </div>
      <div class="bottom">
        <a href="/help" <% if (pageType=='help') { %>
          class="isactive"
        <% } %>>Help?</a>
        <a href="/contact" <% if (pageType=='contact') { %>
          class="isactive"
        <% } %>>Contact Us</a>
      </div>
    </div>
    <div style="margin:0px 40px">
      <div id="logo">
        <div class="pull-left">
          <span onclick="openNav()"><i class="fa fa-bars" aria-hidden="true"></i></span>
        </div>
        <a href="/home">Namma Cafeteria</a>
        <div class="pull-right">
          <a href="/cart" <% if (pageType=='cart' || pageType=='payments') {%>
            style="display:none"
          <%} %>><i class="fa fa-shopping-cart" aria-hidden="true" title="Cart"></i></a>
          <a href="/home" <% if (pageType=='home' || pageType=='payments') {%>
            style="display:none"
          <%} %>><i class="fa fa-home" aria-hidden="true" title="Home"></i></a>
          <a href="/logout"<% if (pageType=='payments') {%>
            style="display:none"
          <%} %>><i class="fa fa-sign-out" aria-hidden="true" title="Logout"></i></a>
        </div>
      </div>
    </div>
    <% } %>
  </header><!-- End Header -->
   <%- body %>
  <!--Footer start-->
  <footer id="footer">
    <div class="copyright">
      &copy; Copyright <strong><span>Delicious</span></strong>. All Rights Reserved
    </div>
    <div class="credits">
      Designed by BootstrapMade & JotForm
    </div>
  </footer>
  <!-- End Footer -->
  <% if (pageType=="managerhome" || pageType=="managermenu" || pageType=="managerorders" || pageType=="managerliveorders") { %>
    <script src="http://localhost:3000/js/bootstrap.bundle.min.js"></script>
    <script src="http://localhost:3000/js/main.js"></script>
  <% } else { %>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/main.js"></script>
  <% } %>
  <script>
    if(document.documentElement.scrollHeight>window.innerHeight){
    document.getElementById('footer').style.position = 'relative';
  } else {
    document.getElementById('footer').style.position = 'absolute';
  }
  </script>
 </body>
 </html>