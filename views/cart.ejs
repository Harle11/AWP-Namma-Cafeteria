<main id="main">
  <div class="container"><!--Cart-->
    <div class="cartbox">
      <h1 style="text-align: center; color:#FFB03B; font-family: Satisfy, sans-serif;">Cart</h1>
      <% if (mycart.total == 0) { %>
        <h4 style="text-align: center">You don't have any items in the cart</h4>
      <% } else { %>
        <table id="cart-table">
          <thead>
            <tr>
              <th>Item Name</th>
              <th valign="right">Price</th>
              <th valign="right"></th>
            </tr>
          </thead>
          <tbody>
            <% for( let i = 0; i < mycart.items.length; i++ ) { %>
              <tr>
                <td><%= mycart.items[i].name %></td>
                <td><%= mycart.items[i].price %> </td>
                <td><a href="/removefromcart?dishindex=<%= i %>">Remove</a></td>
              </tr>
            <% } %>
          </tbody>
        </table>
        <h3 style="text-align: right; margin: 50px 20px 0px; color: #000;">Your total is: â‚¹<%= mycart.total %> </h3>
      <% } %>
    </div>
  </div>
  <div class="container d-flex justify-content-around" style="margin-top: 30px;">
    <a href="/menu" class="nav-btn">Back To Menu</a>
    <% if (mycart.total > 0) { %>
      <a href="/emptycart" class="nav-btn">Clear Cart</a>
      <form action="/payments" method="POST">
        <input type="hidden" name="amount" value="<%= mycart.total %>">
        <input type="submit" value="Proceed To Payments" class="nav-btn">
      </form>
    <% } %>
  </div>
</main>